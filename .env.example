# Chitra — Environment Configuration
# Copy to .env and adjust as needed: cp .env.example .env

# Data directory — all capability databases and assets stored here
# Development: ~/.chitra/data  |  Production: /var/chitra/data
CHITRA_DATA_DIR=~/.chitra/data

# LLM model — change this to swap models, no code change required
CHITRA_LLM_MODEL=llama3.1:8b

# Proactive loop tick interval in seconds
CHITRA_PROACTIVE_INTERVAL=60

# Conversation history turns to include in LLM context
CHITRA_HISTORY_TURNS=10
